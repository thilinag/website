---
import Layout from "../layouts/Layout.astro";

const allHiking = await Astro.glob("../pages/hiking/*.mdx");
allHiking.sort(
  (a, b) =>
    Date.parse(b.frontmatter.pubDate) - Date.parse(a.frontmatter.pubDate)
);

const name = "Thilina Gunasekara";
---

<Layout title={`Hiking | ${name}`}>
  <h1>Hiking</h1>
  <ul class="hiking">
    {
      allHiking.map((post) => (
        <li>
          <a href={post.url}>{post.frontmatter.title}</a>
        </li>
      ))
    }
  </ul>
</Layout>
<style>
  .hiking {
    padding: 0;
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
</style>
