---
import Layout from "../layouts/Layout.astro";

const allHiking = await Astro.glob("../pages/hiking/*.mdx");
allHiking.sort(
  (a, b) =>
    Date.parse(b.frontmatter.pubDate) - Date.parse(a.frontmatter.pubDate)
);

const title = "Hiking";
---

<Layout title={title}>
  <h1>{title}</h1>
  <ul class="hiking">
    <h4>Currenly Hiking</h4>
    <div class="current-hikes">
      <a href="/tags/heysen" class="hike-card">
        <h2>Heysen trail</h2>
        <p>6/65 complete</p>
      </a>
      <a href="/tags/adelaide100" class="hike-card">
        <h2>Adelaide 100</h2>
        <p>1/4 complete</p>
      </a>
    </div>
    <h4>Recent Hikes</h4>
    {
      allHiking.map((post) => (
        <li>
          <a href={post.url}>{post.frontmatter.title}</a>
        </li>
      ))
    }
  </ul>
</Layout>
<style>
  .hiking {
    padding: 0;
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .current-hikes {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  @media (min-width: 768px) {
    .current-hikes {
      flex-direction: row;
    }
  }

  .hike-card {
    flex: 1;
    text-decoration: none;
  }
</style>
