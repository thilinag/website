---
export const prerender = true;

import { getCollection } from "astro:content";
import Post from "../../components/Post.astro";
import Layout from "../../layouts/Layout.astro";

export async function getStaticPaths() {
  const allProjects = await getCollection("projects");
  const allWriting = await getCollection("writing");
  const allHiking = await getCollection("hiking");
  const allPosts = [...allProjects, ...allWriting, ...allHiking];
  const uniqueTags = [
    ...new Set(allPosts.map((post) => post.data.tags).flat()),
  ];

  return uniqueTags.map((tag) => {
    const filteredPosts = allPosts
      .filter((post) => post.data.tags.includes(tag))
      .sort((a, b) => b.data.pubDate.getDate() - a.data.pubDate.getDate());
    return {
      params: { tag },
      props: { posts: filteredPosts },
    };
  });
}

const { tag } = Astro.params;
const { posts } = Astro.props;
---

<Layout title={tag || ""}>
  <p>Posts tagged with <span class='tag'>#{tag}</span></p>
  <ul class='posts'>
    {posts.map((post: any) => <Post post={post} />)}
  </ul>
</Layout>
<style>
  .posts {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .tag {
    font-weight: bold;
    text-transform: uppercase;
  }

  h4 {
    margin: 0;
  }
</style>
