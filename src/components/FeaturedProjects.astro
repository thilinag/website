---
import Post from "./Post.astro";
const allProjects = await Astro.glob("../pages/projects/*.mdx");
const featuredProjects = allProjects.filter(
  (project) => project.frontmatter.featured
);
---

<section>
  <h3>Recent Projects</h3>
  <ul class="featured">
    {featuredProjects.map((project) => <Post post={project} />)}
  </ul>
</section>
<style>
  section {
    margin: 5rem 0 0;
  }
  .featured {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }
</style>
