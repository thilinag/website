<style is:global>
  :root {
    --accent: 124, 58, 237;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      #da62c4 30%,
      white 60%
    );
    --width: 1000px;
  }

  @media (prefers-color-scheme: dark) {
    :root {
      --color: #f5f5f5;
      --bg: #202124;
    }
  }

  @media (prefers-color-scheme: light) {
    :root {
      --color: #202124;
      --bg: #f5f5f5;
    }
  }

  html {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
      DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
    box-sizing: border-box;
  }

  *,
  *:before,
  *:after {
    box-sizing: inherit;
  }

  body {
    margin: 0;
    background: var(--bg);
    color: var(--color);
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  code {
    font-size: 1rem;
  }

  .astro-code {
    border-radius: 1rem;
    padding: 2rem;
  }

  blockquote {
    margin: 2em 0;
  }

  main {
    margin: 2rem auto;
    padding: 0 2rem;
    width: 100%;
    max-width: var(--width);
    font-size: 1.25rem;
    line-height: 1.5;
    word-break: break-word;
    flex: 1;
  }

  @media (min-width: 768px) {
    main {
      font-size: 1.5rem;
    }
  }

  header {
    display: flex;
    justify-content: space-between;
    text-transform: uppercase;
    margin: 0 auto;
    padding: 2rem;
    width: 100%;
    max-width: var(--width);
    position: sticky;
    top: 0;
    background: var(--bg);
  }

  header a {
    text-decoration: none;
    display: block;
    padding: 0.5em 1rem;
    font-size: 1rem;
  }

  h1 {
    font-size: 2rem;
  }

  @media (min-width: 768px) {
    h1 {
      font-size: 4rem;
    }
  }

  .tweet-card {
    word-break: break-word;
  }

  a {
    color: var(--color);
  }

  footer {
    margin: 2rem auto;
    padding: 0 2rem;
    width: 100%;
    max-width: var(--width);
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    font-size: 0.75rem;
  }

  img {
    max-width: 100%;
  }
</style>
