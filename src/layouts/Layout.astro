---
import Navigation from "../components/Navigation.astro";
export interface Props {
  title: string;
  backUrl?: string;
}

const { title, backUrl = null } = Astro.props;
const pathname = new URL(Astro.request.url).pathname;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>
  </head>

  <body>
    <header>
      {backUrl && <a href={backUrl}>‚Üê back</a>}
      <Navigation />
    </header>
    <main>
      <slot />
    </main>
  </body>
</html>
<style is:global>
  :root {
    --accent: 124, 58, 237;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      #da62c4 30%,
      white 60%
    );
  }

  @media (prefers-color-scheme: dark) {
    :root {
      --color: #f5f5f5;
      --bg: #202124;
    }
  }

  @media (prefers-color-scheme: light) {
    :root {
      --color: #202124;
      --bg: #f5f5f5;
    }
  }

  html {
    font-family: monospace;
  }

  body {
    margin: 0;
    background: var(--bg);
    font-size: 0.75rem;
  }

  @media (min-width: 540px) {
    body {
      font-size: 1rem;
    }
  }

  code {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
      DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
  }

  blockquote {
    margin: 2em 0;
  }

  main {
    margin: 2rem;
    font-size: 1.25rem;
    color: var(--color);
    line-height: 1.5;
  }

  @media (min-width: 540px) {
    h1 {
      font-size: 1.5rem;
    }
  }

  header {
    display: flex;
    justify-content: space-between;
    text-transform: uppercase;
    margin: 2rem;
  }

  header a {
    text-decoration: none;
    display: block;
    padding: 0.5em 1rem;
    font-size: 1rem;
  }

  h1 {
    font-size: 2rem;
  }

  @media (min-width: 540px) {
    h1 {
      font-size: 4rem;
    }
  }

  .tweet-card {
    word-break: break-word;
  }

  a {
    color: var(--color);
  }
</style>
