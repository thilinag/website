---
import Navigation from "../components/Navigation.astro";
import Social from "../components/Social.astro";
export interface Props {
  title: string;
  backLabel?: string;
  backURL?: string;
}

const name = "Thilina Gunasekara";
const { title, backURL = "", backLabel = "" } = Astro.props;
const pathname = new URL(Astro.request.url).pathname;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="shortcut icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="manifest" href="/manifest.json" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Personal website of Thilina Gunasekara, Adelaide based Software Engineer"
    />
    <script>
      if (import.meta.env.MODE !== "development") {
        if ("serviceWorker" in navigator) {
          navigator.serviceWorker
            .register("/sw.js")
            .then(function (reg) {
              console.log("Successfully registered service worker", reg);
            })
            .catch(function (err) {
              console.warn("Error whilst registering service worker", err);
            });
        }
      }
    </script>

    <title>{title ? `${title} | ${name}` : name}</title>
  </head>

  <body>
    <header>
      {backURL && backLabel && <a href={backURL}>‚Üê {backLabel}</a>}
      <Navigation />
    </header>
    <main>
      <slot />
    </main>
    <footer>
      <span>Thilina Gunasekara &copy; {new Date().getFullYear()}</span>
      <Social />
    </footer>
  </body>
</html>
