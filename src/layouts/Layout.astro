---
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";

import "../styles/main.css";

export interface Props {
  title: string;
  backLabel?: string;
  backURL?: string;
}

const name = "Thilina Gunasekara";
const { title, backURL = "", backLabel = "" } = Astro.props;
const pathname = new URL(Astro.request.url).pathname;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="shortcut icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="manifest" href="/manifest.json" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Personal website of Thilina Gunasekara, Adelaide based Software Engineer"
    />
    <script>
      if ("serviceWorker" in navigator) {
        navigator.serviceWorker
          .getRegistrations()
          .then(function (registrations) {
            for (let registration of registrations) {
              if (
                registration?.active?.scriptURL ==
                "https://www.thilinag.com/sw.js"
              ) {
                registration.unregister();
              }
            }
          });
      }
    </script>
    <title>{title ? `${title} | ${name}` : name}</title>
  </head>

  <body>
    <header>
      {
        backURL && backLabel && (
          <a class="back" href={backURL}>
            <i>‚Üê</i> <span>{backLabel}</span>
          </a>
        )
      }
      <Navigation />
    </header>
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
<style>
  .back {
    padding-left: 0;
    display: flex;
    gap: 0.5rem;
  }
</style>
